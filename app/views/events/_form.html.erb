<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="text-center padded">
        <h1>Create a new Event !</h1>
          <%= simple_form_for :event do |f| %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.button :submit %>
          <% end %>
      </div>
    </div>
  </div>
</div>

